---
import type { Playlist } from "@/lib/data";

interface Props {
  playlist: Playlist;
}

const { playlist } = Astro.props;
const { id, cover, color, title, artists } = playlist;

const artistString = artists.join(", ");
---

<a
  href={`/playlist/${id}`}
  class="relative flex items-center gap-5 p-2 rounded-md playlist-item overlofow-hidden hover:bg-zinc-500"
>
  <picture class="flex-none w-12 h-12">
    <source srcset={cover} type="image/webp" />
    <img
      src={cover}
      alt={`Cover of ${title} by ${artistString}`}
      class="object-cover w-full h-full rounded-md"
    />
  </picture>

  <div class="flex flex-col flex-auto truncate">
    <h4 class="text-sm text-white">{title}</h4>
    <span class="text-xs text-gray-400">{artistString}</span>
  </div>
</a>
